{
  "name": "nps-matrix",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "author": "Julio L. Muller",
  "scripts": {
    "start": "node build/index.js",
    "development": "npm run dev",
    "dev": "tsnd src/index.ts --clear --respawn --transpile-only --ignore node_modules",
    "typeorm": "tsnd node_modules/typeorm/cli.js",
    "seed": "tsnd src/database/seeds/index.ts",
    "migrate": "npm run typeorm -- migration:run",
    "migrate:seed": "npm run migrate && npm run seed",
    "migrate:reset": "npm run typeorm -- schema:drop && npm run migrate",
    "migrate:reset:seed": "npm run migrate:reset && npm run seed",
    "build": "rm -rf build/ && tsc -p .",
    "test": "cross-env NODE_ENV=test jest",
    "pretest": "rm -f src/database/db.test.sqlite"
  },
  "dependencies": {
    "express": "^4.17.1",
    "handlebars": "^4.7.7",
    "http-status-codes": "^2.1.4",
    "lodash.snakecase": "^4.1.1",
    "nodemailer": "^6.5.0",
    "pluralize": "^8.0.0",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^5.0.2",
    "typeorm": "^0.2.31"
  },
  "devDependencies": {
    "@lacussoft/eslint-config": "^1.0.1",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.22",
    "@types/lodash.snakecase": "^4.1.6",
    "@types/node": "^14.14.35",
    "@types/nodemailer": "^6.4.1",
    "@types/pluralize": "^0.0.29",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.22.0",
    "jest": "^26.6.3",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.4",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.2.3"
  }
}
